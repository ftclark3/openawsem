<ForceField>
<!-- Specify atom types -->
<AtomTypes>
 <Type name="N" class="N" element="N" mass="0"/>
 <Type name="H" class="H" element="H" mass="0"/>
 <Type name="CA" class="CA" element="C" mass="12"/>
 <Type name="C" class="C" element="C" mass="0"/>
 <Type name="O" class="O" element="O" mass="16"/>
 <Type name="CB" class="CB" element="B" mass="12"/>
 <Type name="XN" class="XN" element="N" mass="0"/>
 <Type name="XH" class="XH" element="H" mass="0"/>
 <Type name="XCA" class="XCA" element="C" mass="0"/>
 <Type name="XC" class="XC" element="C" mass="0"/>
 <Type name="XO" class="XO" element="O" mass="0"/>
 <Type name="XCB" class="XCB" element="B" mass="0"/>

</AtomTypes>

<!-- Setup residue templates -->
<Residues>
 <Residue name="NGP">
  <Atom name="N" type="N"/>
  <Atom name="H" type="H"/>
  <Atom name="CA" type="CA"/>
  <Atom name="C" type="C"/>
  <Atom name="O" type="O"/>
  <Atom name="CB" type="CB"/>
 </Residue>
 <Residue name="XGP">
  <Atom name="XN" type="XN"/>
  <Atom name="XH" type="XH"/>
  <Atom name="XCA" type="XCA"/>
  <Atom name="XC" type="XC"/>
  <Atom name="XO" type="XO"/>
  <Atom name="XCB" type="XCB"/>
 </Residue>
 <Residue name="IGL">
  <Atom name="N" type="N"/>
  <Atom name="H" type="H"/>
  <Atom name="CA" type="CA"/>
  <Atom name="C" type="C"/>
  <Atom name="O" type="O"/>
 </Residue>
 <Residue name="XGL">
  <Atom name="XN" type="XN"/>
  <Atom name="XH" type="XH"/>
  <Atom name="XCA" type="XCA"/>
  <Atom name="XC" type="XC"/>
  <Atom name="XO" type="XO"/>
 </Residue>
 <Residue name="IPR">
  <Atom name="N" type="N"/>
  <Atom name="CA" type="CA"/>
  <Atom name="C" type="C"/>
  <Atom name="O" type="O"/>
  <Atom name="CB" type="CB"/>
 </Residue>
 <Residue name="XPR">
  <Atom name="XN" type="XN"/>
  <Atom name="XCA" type="XCA"/>
  <Atom name="XC" type="XC"/>
  <Atom name="XO" type="XO"/>
  <Atom name="XCB" type="XCB"/>
 </Residue>
 <Residue name="NTER">
  <AllowPatch name="GLY"/>
  <Atom name="CA" type="CA"/>
  <Atom name="C" type="C"/>
  <Atom name="O" type="O"/>
  <Atom name="CB" type="CB"/>
 </Residue>
 <Residue name="NTX">
  <AllowPatch name="GLX"/>
  <Atom name="XCA" type="XCA"/>
  <Atom name="XC" type="XC"/>
  <Atom name="XO" type="XO"/>
  <Atom name="XCB" type="XCB"/>
 </Residue>
 <Residue name="CTER">
  <AllowPatch name="GLY"/>
  <AllowPatch name="PRO"/>
  <Atom name="N" type="N"/>
  <Atom name="H" type="H"/>
  <Atom name="CA" type="CA"/>
  <Atom name="O" type="O"/>
  <Atom name="CB" type="CB"/>
 </Residue>
 <Residue name="CTX">
  <AllowPatch name="GLX"/>
  <AllowPatch name="PRX"/>
  <Atom name="XN" type="XN"/>
  <Atom name="XH" type="XH"/>
  <Atom name="XCA" type="XCA"/>
  <Atom name="XO" type="XO"/>
  <Atom name="XCB" type="XCB"/>
 </Residue>
 <Residue name="IGL_NTER">
  <Atom name="CA" type="CA"/>
  <Atom name="C" type="C"/>
  <Atom name="O" type="O"/>
 </Residue>
 <Residue name="XGL_NTX">
  <Atom name="XCA" type="XCA"/>
  <Atom name="XC" type="XC"/>
  <Atom name="XO" type="XO"/>
 </Residue>
 <Residue name="IGL_CTER">
  <Atom name="N" type="N"/>
  <Atom name="H" type="H"/>
  <Atom name="CA" type="CA"/>
  <Atom name="O" type="O"/>
 </Residue>
 <Residue name="XGL_CTX">
  <Atom name="XN" type="XN"/>
  <Atom name="XH" type="XH"/>
  <Atom name="XCA" type="XCA"/>
  <Atom name="XO" type="XO"/>
 </Residue>
 <Residue name="IPR_CTER">
  <Atom name="N" type="N"/>
  <Atom name="CA" type="CA"/>
  <Atom name="O" type="O"/>
  <Atom name="CB" type="CB"/>
 </Residue>
 <Residue name="XPR_CTX">
  <Atom name="XN" type="XN"/>
  <Atom name="XCA" type="XCA"/>
  <Atom name="XO" type="XO"/>
  <Atom name="XCB" type="XCB"/>
 </Residue>
</Residues>

<!-- Setup Patches-->
<Patches>
 <Patch name="GLY">
  <RemoveAtom name="CB"/>
 </Patch>
 <Patch name="GLX">
  <RemoveAtom name="XCB"/>
 </Patch>
 <Patch name="PRO">
  <RemoveAtom name="H"/>
 </Patch>
 <Patch name="PRX">
  <RemoveAtom name="XH"/>
 </Patch>
</Patches>

</ForceField>